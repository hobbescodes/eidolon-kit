{
  "name": "eidolonkit",
  "private": true,
  "scripts": {
    "anvil": "anvil --block-time 2",
    "build": "turbo build",
    "dev": "turbo run dev docs:dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "knip": "knip-bun --tags=-knipignore",
    "prepare": "husky",
    "test": "turbo test",
    "contracts:install": "bun --filter @eidolonkit/contracts soldeer",
    "contracts:deploy": "bun --filter @eidolonkit/contracts deploy",
    "ui:add": "bun --filter @eidolonkit/ui ui:add"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@types/bun": "^1.1.4",
    "husky": "^9.0.11",
    "knip": "^5.19.0",
    "lint-staged": "^15.2.7",
    "turbo": "2.0.5-canary.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "biome format --write",
      "biome lint"
    ]
  },
  "packageManager": "bun@1.1.13",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/wallet/*"
  ],
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
