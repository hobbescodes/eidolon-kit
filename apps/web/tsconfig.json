{
  "extends": "@eidolonkit/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src",
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./src/generated/schema.graphql",
        "tadaOutputLocation": "./graphql-env.d.ts"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
